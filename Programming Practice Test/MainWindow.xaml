<Window x:Class="QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="1. What is the capital of Germany?" FontWeight="Bold"/>
            <RadioButton Content="Berlin" Name="Question1Option1"/>
            <RadioButton Content="Madrid" Name="Question1Option2"/>
            <RadioButton Content="Paris" Name="Question1Option3"/>
        </StackPanel>

        <StackPanel Margin="242,20,-102,120">
            <TextBlock Text="2. What is the capital of Portugal?" FontWeight="Bold"/>
            <RadioButton Content="London" Name="Question2Option1"/>
            <RadioButton Content="Lima" Name="Question2Option2"/>
            <RadioButton Content="Lisbon" Name="Question2Option3"/>
        </StackPanel>

        <StackPanel Margin="20,93,120,47">
            <TextBlock Text="3. What is the capital of Brazil?" FontWeight="Bold"/>
            <RadioButton Content="Brasília" Name="Question3Option1"/>
            <RadioButton Content="Washington" Name="Question3Option2"/>
            <RadioButton Content="Kabul" Name="Question3Option3"/>
        </StackPanel>

        <Button Content="Submit" Name="SubmitButton" Click="SubmitButton_Click" HorizontalAlignment="Center" Margin="0,289,0,47" Width="58"/>
    </Grid>
</Window>
